<div class="container d-flex justify-content-center">
  <div class="card text-center">
    <div class="card-header">
      <h1 class="display-4"><%= @restaurant.name %></h1>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3">Address:</dt>
        <dd class="col-sm-9"><%= @restaurant.address %></dd>

        <dt class="col-sm-3">Phone number:</dt>
        <dd class="col-sm-9"><%= @restaurant.phone_number %></dd>

        <dt class="col-sm-3">Category:</dt>
        <dd class="col-sm-9"><%= @restaurant.category %></dd>
      </dl>
    </div>
  </div>
</div>
<div class="text-center my-3">
  <%= link_to "Edit restaurant", new_restaurant_path, class: "btn btn-success" %>
  <%= link_to "Back to list", restaurants_path, class: "btn btn-primary" %>
</div>
